%h1 Listing all posts

= link_to 'New post', new_post_path

%table
  %tr
    %th
      Title
    %th
      Text
    %th
  - @posts.each do |post|
    %tr
      %td
        = post.title
      %td
        = post.text
      %td
        = link_to 'Show', post
        = link_to 'Edit', edit_post_path(post)
